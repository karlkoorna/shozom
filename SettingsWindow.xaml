<Window x:Class="Shozom.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shozom"
        MinWidth="480" MaxWidth="480" Width="480"
        MinHeight="120" MaxHeight="120" Height="120"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="16">
        <TextBlock
            Padding="0,0,0,4"
            FontSize="14"
            FontWeight="DemiBold"
            Text="Device" />
        <ComboBox
            Name="DevicePicker"
            Padding="5,4,4,5"
            FontFamily="Consolas" />
    </StackPanel>
</Window>
